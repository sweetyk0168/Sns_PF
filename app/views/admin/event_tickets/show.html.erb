<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <h3 class="mt-3">■イベントチケット詳細</h3>
      <table class="table table-bordered">
        <tr>
          <th>イベントタイトル名</th>
          <td><%= @eventticket.event_title %></td>
        </tr>
        <tr>
          <th>イベントチケット名</th>
          <td><%= @eventticket.ticket_name %></td>
        </tr>
        <tr>
          <th>イベントチケット販売開始日</th>
          <td><%= @eventticket.ticket_startday %></td>
        </tr>
        <tr>
          <th>イベントチケット販売終了日</th>
          <td><%= @eventticket.ticket_endday %></td>
        </tr>
        <tr>
          <th>イベント会場名</th>
          <td><%= @eventticket.ticket_place %></td>
        </tr>
        <tr>
          <th>イベント公演日</th>
          <td><%= @eventticket.performance_date %></td>
        </tr>
        <tr>
          <th>チケット説明文</th>
          <td><%= @eventticket.ticket_introduction %></td>
        </tr>
        <tr>
          <th>税込価格（税抜価格）</th>
          <td><%= @eventticket.add_tax_ticket_price.to_s(:delimited) %>(<%= @eventticket.ticket_price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <th>ジャンル名</th>
          <td><%= @eventticket.genre.name %></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @eventticket.sales_status == true %>
              販売中
            <% else %>
  　           販売終了
            <% end %>
          </td>
        </tr>
      </table>
      <div>
        <%= link_to '編集する', edit_admin_event_ticket_path(@eventticket.id), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>