<h3>■イベントチケット新規登録</h3>
<div>
  <%= form_with model: @eventticket, url:admin_event_tickets_path do |f| %>
    <%= f.label :'イベントタイトル名' %>
    <%= f.text_field :event_title, autofocus: true, placeholder: "イベントタイトル名" %><br>

    <%= f.label :'イベントチケット名' %>
    <%= f.text_field :ticket_name %><br>

    <%= f.label :'イベントチケット販売開始日' %>
    <%= f.text_field :ticket_startday, placeholder: "イベント開始日" %><br>

    <%= f.label :'イベントチケット販売終了日' %>
    <%= f.text_field :ticket_endday,  placeholder: "イベント終了日" %><br>

    <%= f.label :'イベント会場名' %>
    <%= f.text_field :ticket_place, placeholder: "イベント会場名" %><br>

    <%= f.label :'イベントチケット説明文' %>
    <%= f.text_area :ticket_introduction, placeholder: "イベントチケット説明文" %><br>

    <%= f.label :'税抜き価格' %>
    <%= f.text_field :ticket_price, placeholder: "税抜き価格" %><br>

    <%= f.label :'ジャンル名' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %><br>

    <%= f.label :'販売ステータス' %>
    <%= f.radio_button :sales_status, true %>
    <%= f.label:sales_status, "販売中", {value: :true,style: "display: inline-block;"} %>
    <%= f.radio_button :sales_status, false %>
    <%= f.label:sales_status, "販売停止中", {value: :false,style: "display: inline-block;"} %><br>
    <%= f.submit '新規登録' %>
  <% end %>
</div>