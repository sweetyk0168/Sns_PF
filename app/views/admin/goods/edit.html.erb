<h3>■グッズ情報編集</h3>
<%= form_for(@good, url:admin_event_good_path(@good)) do |f| %>
  <%= f.label :"グッズ画像" %>
  <%= f.file_field :image, accept: "/image/*" %><br>
  <%= f.label :"グッズ名" %>
  <%= f.text_field :name %><br>
  <%= f.label :"価格" %>
  <%= f.text_field :price %><br>
  <%= f.label :"グッズ説明" %>
  <%= f.text_area :introduction %><br>
  <%= f.label :"投稿ステータス" %><br>
  <%= f.radio_button :post_status, true %>
  <%= f.label :post_status, "投稿中", { value: :true, style: "display: inline-block;" } %>
  <%= f.radio_button :post_status, false %>
  <%= f.label :post_status, "投稿完了", { value: :false, style: "display: inline-block;" } %><br>
  <%= f.submit '変更を保存' %>
<% end %>