<div>
  <h3>イベント情報編集</h3>
    <%= form_for(@event, url:admin_event_path) do |f| %>
      <%= f.label :"イベント名" %>
      <%= f.text_field :name %><br>
      <%= f.label :"イベント説明" %>
      <%= f.text_area :introduction %><br>
      <%= f.label :"イベントURL" %>
      <%= f.text_field :url_strings %><br>
      <%= f.label :"ジャンル" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %><br>
      <%= f.label :"投稿ステータス" %>
      <%= f.radio_button :post_status, true %>
      <%= f.label :post_status, "投稿中",{ value: :true, style: "display: inline-block;" } %>
      <%= f.radio_button :post_status, false %>
      <%= f.label :post_status, "投稿完了", { value: :false, style: "display: inline-block;" } %><br>
      <%= f.submit '変更を保存' %>
    <% end %>
</div>
