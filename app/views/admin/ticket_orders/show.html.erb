<div class="container height">
  <div class="row">
    <div class="col-xs-12">
      <h2>注文履歴詳細</h2>
<table>
  <thead>
    <tr><th>購入者</th><td><%= @ticketorder.customer.last_name %><%= @ticketorder.customer.first_name %></td></tr>
    <tr><th>注文日</th><td><%= @ticketorder.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td></tr>
    <tr><th>配送先</th><td><%= @ticketorder.postcode %><%= @ticketorder.address %><%= @ticketorder.customer.last_name %><%= @ticketorder.customer.first_name %></td></tr>
    <tr><th>支払方法</th><td><%= @ticketorder.payment_method %></td></tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @ticketorder, url: admin_ticket_order_path(@ticketorder.id), local:true do |f| %>
            <%= f.select :order_status, ["入金待ち", "入金確認", "発送準備中", "発送済み"] %>
            <%= f.submit '更新' %>
        <% end %>
      </td>
    </tr>
  </thead>
</table>
    </div>
  <div class="row">
    <div class="col-xs-9">
      <table>
  <thead>
    <tr>
      <th>チケットタイトル名</th>
      <th>単価（税込）</th>
      <th>枚数</th>
      <th>小計</th>
      <th>チケット手配ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% total = 0 %>
    <% @ticket_order_details.each do |ticket_order_detail| %>
      <tr>
        <td><%= ticket_order_detail.event_ticket.event_title %></td>
        <%#= order_detail.item.add_tax_sales_price.to_s(:dalimited) %>
        <td><%= (ticket_order_detail.event_ticket.add_tax_ticket_price*1.1).to_i %></td>
        <td><%= ticket_order_detail.amount %></td>
        <%#= (order_detail.item.add_tax_sales_price * order_detail.amount).to_s(:dalimited) %>
        <td><%= ((ticket_order_detail.event_ticket.add_tax_ticket_price * ticket_order_detail.amount)*1.1).to_i %>
            <% total += ((ticket_order_detail.event_ticket.add_tax_ticket_price*ticket_order_detail.amount)*1.1).to_i %>
        </td>
        <td>
          <%= form_with model: ticket_order_detail, url: admin_ticket_order_detail_path(ticket_order_detail), local: true do |f| %>
            <%= f.select :ticket_status, ["着手不可", "チケット手配中", "チケット手配完了"] %>
            <%= f.submit "更新" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>

<table>
  <thead>
    <tr><th>商品合計</th><td><%= total %></td></tr>
    <tr><th>送料</th><td><%= @ticketorder.postage %></td></tr>
    <tr><th>請求金額合計</th><td><%= total + @ticketorder.postage %></td></tr>
  </thead>
</table>
  </div>
</div>
