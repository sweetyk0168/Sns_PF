<h3>会員一覧</h3>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to (customer.last_name +  customer.first_name ), admin_customers_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted %>
            退会済み
          <% else %>
            有効
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @customers %>