<h3><%= @customers.last_name %><% @customers.first_name %>さんの会員詳細</h3>
<div>
  <label>会員ID</label>
  <%= @customers.id %>
</div>
<div>
  <label>氏名</label>
  <%= @customers.last_name %><%= @customers.first_name %>
</div>
<div>
  <label>フリガナ</label>
  <%= @customers.last_name_kana %><%= @customers.first_name_kana %>
</div>
<div>
  <label>郵便番号</label>
  <%= @customers.postal_code %>
</div>
<div>
  <label>住所</label>
  <%= @customers.address %>
</div>
<div>
  <label>電話番号</label>
  <%= @customers.telephone_number %>
</div>
<div>
  <label>メールアドレス</label>
  <%= @customers.email %>
</div>
<div>
  <label>会員ステータス</label>
  <% if @customers.is_deleted %>
    無効
  <% else %>
    有効
  <% end %>
</div>
<%= link_to "編集する", edit_admin_customer_path(@customers) %>