<div class="container">
  <div class="bg-light">
    <h3 class="mb-0">〇〇イベントグッズ一覧</h3>(全<%= @quantity %>件)<br>
      <div class="row justify-content-center">
        <div class="card-deck">
          <% @goods.each do | good | %>
            <div class="col-4">
              <%= link_to event_good_path(good.event.id, good.id) do %>
                <!--<div class="card w-50 mx-auto shadow-lg">-->
                  <!--<div class="card-header p-0">-->
                    <%= image_tag good.get_image(200,200) %>
                  <!--</div>-->
                <!--</div>-->
              <% end %>
              <div class="card-body d-flex align-items-center">
                <p class="card-title text-left">
                  <%= good.name %><br>
                  ￥<%= good.price.to_s(:delimited, delimiter: ',') %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>