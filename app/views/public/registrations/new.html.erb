<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <label>名前</label><br>
  <div class="field">
    <label>（姓）</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "山田" %>
    <label>（名）</label>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
  </div><br>

  <label>フリガナ</label><br>
  <div class="field">
    <label>（セイ）</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ヤマダ" %>
    <label>（メイ）</label>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
  </div><br>

<label>メールアドレス</label><br>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
  </div><br>

<label>電話番号（ハイフンなし）</label><br>
  <div class="field">
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder:"00000000000" %>
  </div><br>

<label>郵便番号（ハイフンなし）</label><br>
  <div class="field">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder:"0000000" %>
  </div><br>

<label>住所</label><br>
  <div class="field">
    <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"a県a市〇〇△ー△ー△" %>
  </div><br>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h4>■既に登録済みの方</h4>
<p><%= link_to 'こちら', customer_session_path %></p>

<%#= render "public/shared/links" %>
