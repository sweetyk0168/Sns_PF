<div class="container height">
  <div class="row">
      <h2>新規会員登録</h2>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  			<%= render "public/shared/error_messages", resource: resource %>
  			<%= f.label :'名前' %><br>
  			<div class="field">
    			<%= f.label :'（姓）' %>
    			<%= f.text_field :last_name, autofocus: true, placeholder: "山田" %>
    			<%= f.label :'（名）' %>
    			<%= f.text_field :first_name, placeholder: "道子" %>
  			</div><br>

  			<%= f.label :'フリガナ' %><br>
  			<div class="field">
    			<%= f.label :'（セイ）' %>
    			<%= f.text_field :last_name_kana,  placeholder: "ヤマダ" %>
    			<%= f.label :'（メイ）' %>
    			<%= f.text_field :first_name_kana,  placeholder: "ミチコ" %>
  			</div><br>

			  <%= f.label :'メールアドレス' %><br>
  			<div class="field">
    			<%= f.email_field :email,  placeholder:"sample@example.com" %>
  			</div><br>

			  <%= f.label :'電話番号（ハイフンなし）' %><br>
  			<div class="field">
    			<%= f.text_field :telephone_number,  placeholder:"00000000000" %>
  			</div><br>

			  <%= f.label :'郵便番号（ハイフンなし）' %><br>
  			<div class="field">
    			<%= f.text_field :postal_code,  placeholder:"0000000" %>
  			</div><br>

			  <%= f.label :'住所' %><br>
  			<div class="field">
    			<%= f.text_field :address, placeholder:"a県a市〇〇△ー△ー△" %>
  			</div><br>

  			<div class="field">
    			<%= f.label :"パスワード" %>
    			<% if @minimum_password_length %>
    				<em>(<%= @minimum_password_length %>文字以上)</em>
    			<% end %><br />
    			<%= f.password_field :password, autocomplete: "new-password" %>
  			</div>

  			<div class="field">
    			<%= f.label :"パスワード（確認用）" %><br />
    			<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  			</div>

  			<div class="actions">
    			<%= f.submit "新規登録" %>
  			</div>
		<% end %>

		<h4>■既に登録済みの方</h4>
		<p><%= link_to 'こちら', customer_session_path %></p>

		<%#= render "public/shared/links" %>
  </div>
</div>
