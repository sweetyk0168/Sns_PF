<div class="container">
	<div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
    		<div class="bg-light py-5 px-5">
      		<p  class="font-weight-bold">
      			<%= @eventticket.event_title %><br>
	  				■販売期間：<%= @eventticket.ticket_startday %>～<%= @eventticket.ticket_endday %><br>
      			<%= safe_join(@eventticket.ticket_introduction.split("\n"),tag(:br)) %><br>
      		</p>

	  			<h5 class="mt-3">■公演日時・座席</h3>
	  			<p class="font-weight-bold"><%= @eventticket.performance_date %></p>
	  			<p>18:00　開演<br>
	  			■会場：<%= @eventticket.ticket_place %></p><br>
	  			<%= @eventticket.ticket_name %><br>
	  			<% if @eventticket.sales_status == true %>
  					<%= @eventticket.add_tax_ticket_price.to_s(:delimited) %>（税込）
	  			<% else %>
    				soldout
	  			<% end %>

	  			<div class="mt-3">
  					<% if @eventticket.sales_status == true %>
    						<%= form_with model: @cart_ticket, url: cart_tickets_path do |f| %>
      						<%= f.hidden_field :event_ticket_id, value: @eventticket.id %>
      						<%= f.number_field :amount, placeholder: "枚数選択", min: 1, max: 4 %>

      						<%= f.submit 'カートに入れる', class:"btn btn-primary" %>
    						<% end %>
  					<% end %>
	  			</div>
    		</div>
  	</div>
	</div>
</div>