<h2>ユーザー情報</h2>
<table>
  <tbody>
    <tr>
      <th>名前</th>
      <th><%= @customer.last_name %></th>
    </tr>
    <tr>
      <th>紹介文</th>

    </tr>
    <tr>
      <th>フォロー</th>
      <td>
        <%= link_to  follows_customer_path(@customer) do %>
          <h6><%= @customer.followerds.count %></h6>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>フォロワー</th>
      <td>
        <%= link_to followers_customer_path(@customer) do %>
          <h6><%= @customer.followerds.count %></h6>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <% if current_customer != @customer %>
          <% if current_customer.following?(@customer) %>
            <%= link_to "フォロー外す", customer_relationships_path(@customer.id), method: :delete, class: "btn btn-danger" %>
          <% else %>
            <%= link_to "フォローする", customer_relationships_path(@customer.id), method: :post, class: "btn btn-success" %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<table>
  <caption>♡いいね一覧</caption>
  <thead>
    <tr>
      <th>投稿者名</th>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.post.customer.last_name %></td>
        <td>
          <%= link_to post_path(favorite.post) do %>
            <%= favorite.post.title %>
          <% end %>
        </td>
      </tr>
    <% end %>
    <!--<p>コメント数:<%#= @post.post_comments.count %></p>-->
  </tbody>
</table>