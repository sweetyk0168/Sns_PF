<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>マイページ</h1>
	    <h3>登録情報</h3>
		  <%= link_to "編集する", customers_information_edit_path %>

		<!--<div>-->
  			<%#= @customer.last_name %><%#= @customer.first_name %>
  			<%#= image_tag @customer.get_profile_image(height, width) %>
		<!--</div>-->

		<table>
  			<tr>
    			<th>氏名</th>
    			<td><%= @customer.last_name %><%= @customer.first_name %></td>
  			</tr>
  			<tr>
    			<th>カナ</th>
    			<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  			</tr>
  			<tr>
    			<th>メールアドレス</th>
    			<td><%= @customer.email %></td>
  			</tr>
  			<tr>
    			<th>電話番号</th>
    			<td><%= @customer.telephone_number %></td>
  			</tr>
  			<tr>
    			<th>郵便番号</th>
    			<td><%= @customer.postal_code %></td>
  			</tr>
  			<tr>
    			<th>住所</th>
    			<td><%= @customer.address %></td><br>
  			</tr>
		</table>
    </div>
  </div>
</div>
