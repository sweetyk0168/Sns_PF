<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="p-4 mb-0"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
          <div class="form-body p-4">
            <%= form_with model: @customer, url: customers_information_path, local: true do |f| %>
              <div class="field">
                 <%= f.label:■氏名 %>
                 <%= f.text_field :last_name,  class:"form-control", autofocus: true %>
                 <%= f.text_field :first_name, class:"form-control" %>
              </div><br>

              <div class="field">
                <%= f.label:■フリガナ %>
                <%= f.text_field :last_name_kana, class:"form-control" %>
                <%= f.text_field :first_name_kana, class:"form-control" %>
              </div><br>

              <div class="field">
                <%= f.label:■郵便番号 %>
                <%= f.text_field :postal_code, class:"form-control" %>
              </div><br>

              <div class="field">
                <%= f.label:■住所 %>
                <%= f.text_field :address, class:"form-control",size: "50" %>
              </div><br>

              <div class="field">
                <%= f.label:■電話番号 %>
                <%= f.text_field :telephone_number, class:"form-control" %>
              </div><br>

              <div class="field">
                <%= f.label:■メールアドレス %>
                <%= f.text_field :email, class:"form-control" %>
              </div><br>

              <div class="field text-left">
                <%= f.label:■会員ステータス %><br>
                <label><%= f.radio_button :is_deleted, "有効", checked:"checked" %>有効</label>
                <label><%= f.radio_button :is_deleted, "無効" %>退会</label>
              </div>

              <div class="text-right">
                <%= f.submit '変更を保存', class:"btn btn-success" %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>